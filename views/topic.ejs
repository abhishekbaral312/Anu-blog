<%- include('partials/header'); -%>
<div class="topichead">
  <h1>Topics</h1>
</div>
<div class="topcardsec">
  <% posts.forEach(function(post){ %>
    <div class="card">
      <img class="mag" src="/images/mag.png" alt="">
      <div class="cardint">
        <img class="cardimg" src="<%= post.image %>" alt="image">
        <div class="cardtxt">
          <h3><%= post.title %></h3>
          <p>  <%= post.content.substring(0, 500) + "..." %>
            <a href="/posts/<%= post._id %>">Read More</a>
          </p>
        </div>
      </div>
    </div>
  <% }) %>
</div>

<%- include('partials/footer'); -%>
