  <title>MY BLOG</title>
</head>

<body>
  <div class="main">


    <nav class="navbr">

      <img class="logo" src="images/avatar.png" alt="">
      <span class="blgtxt">Anu's Blog</span>
      <div class="navli">

        <a href="/">Home</a>
        <a href="/compose">ADD</a>
        <a href="#">DELETE</a>
        <a href="/composehead">ADD HEADING</a>
      </div>

      <button class="navbtn"><i class="fa-solid fa-bars navicon"></i></button>
    </nav>
    <div class="navmenu" style="margin-top:110px;">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/compose">ADD</a></li>
        <li><a href="#">DELETE</a></li>
        <li><a href="/composehead">ADD HEADING</a></li>
      </ul>
    </div>
       <center>
         <div class="admintable">
           <table cellpadding="20px" bgcolor="wheat">
             <tr>
               <th>Sl No.</th>
               <th>Topic</th>
               <th>Date</th>
               <th>Delete</th>
             </tr>
             <% posts.forEach(function(post){ %>
             <tr>
               <td></td>
               <td><%= post.title %></td>
               <td><%= post.date %></td>
               <td>
                 <form action="/delete" method="post">
                 <label class="deletebtn">
                   <i class="fa-solid fa-trash-can " ></i>
                   <input type="checkbox" name="checkbox" value="<%= post._id %>" onchange="this.form.submit()">
                 </label>
               </form>
               </td>
             </tr>
               <% }) %>
           </table>
         </div>
       </center>


  </div>
</body>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="fun.js" charset="utf-8"></script>

</html>
