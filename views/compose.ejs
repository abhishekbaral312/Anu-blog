<%- include('partials/header'); -%>

<div class="compose">
    <h1 style="margin:80px;">Compose</h1>
    <form class="composeform" action="/compose" method="post" enctype="multipart/form-data">
      <span>Title</span><br>
      <input class="composeinput" type="text" name="postTitle" required><br>
      <span>Post</span><br >
      <textarea name="postBody" rows="8" cols="80" required></textarea><br>

      <button>Upload a Image</button><br>
      <input class="composefilebtn" type="file" name="postImage" required>
      <button class="publishbtn" type="submit" name="button">Publish</button>
    </form>

  </div>

<%- include('partials/footer'); -%>
